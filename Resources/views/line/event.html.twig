<div class="content-view-line class-event">
    <h2>
        <a href={{ path( location ) }} title="{{ ez_field_value( content, 'title' ) }}">
            {{ ez_render_field( content, 'title' ) }}
        </a>
    </h2>

    {% if not ez_is_field_empty( content, 'image' ) %}
    <span class="imgArticle">
        <a href={{ path( location ) }}>
            {{ez_render_field( content, 'image', { "parameters": { "image_alias": 'event_agenda_embed', "viewType": 'embed_agenda' } } ) }}
        </a>
    </span>
    {% endif %}

    {% if not ez_is_field_empty( content, 'description' ) %}
        {{ ez_render_field( content, 'description' ) }}
    {% endif %}

    {% if date.0|length > 1 %}
        {% for item in date %}
            {{ render( controller( "ez_content:viewContent", {
                "contentId": item,
                "viewType": "embed_agenda"
                } ) )
            }}
        {% endfor %}
    {% endif %}

</div>
