<script src='https://code.jquery.com/jquery-2.1.3.min.js'></script>

{% javascripts
    '@OpenWideAgendaBundle/Resources/public/js/bootstrap.min.js'
    '@OpenWideAgendaBundle/Resources/public/js/2.10.2/moment.min.js'
    '@OpenWideAgendaBundle/Resources/public/js/2.3.1/fullcalendar.min.js'
    '@OpenWideAgendaBundle/Resources/public/js/2.3.1/fr.js'
%}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}

{% if type == 'mini' %}
    {% javascripts
        '@OpenWideAgendaBundle/Resources/public/js/fonctions_mini.js'
        '@OpenWideAgendaBundle/Resources/public/js/moment_fr.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% else %}
    {% javascripts
        '@OpenWideAgendaBundle/Resources/public/js/fonctions.js'
        '@OpenWideAgendaBundle/Resources/public/js/moment_fr.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endif %}
